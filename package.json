  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/webpack-glsl-minify.git"
  },
  "dependencies": {
    "glob": "latest",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/glob": "latest",
    "@types/jasmine-node": "latest",
    "@types/loader-utils": "latest",
    "@types/webpack": "^4.41.8",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "latest",
    "eslint-plugin-github": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "^22.1.0",
    "jasmine": "latest",
    "jasmine-xml-reporter": "latest",
    "loader-utils": "^2.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "scripts": {
    "build": "npx tsc",
    "lint": "npx eslint \"**/*.ts\" \"**/*.js\"",
