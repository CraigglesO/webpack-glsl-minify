{
  "name": "webpack-glsl-minify",
  "version": "1.3.3",
  "author": "Leo C. Singleton IV <leo@leosingleton.com>",
  "description": "GLSL Loader, Preprocessor, and Minifier for Webpack",
  "homepage": "https://github.com/leosingleton/webpack-glsl-minify",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/webpack-glsl-minify.git"
  },
  "dependencies": {
    "glob": "latest",
    "yargs": "latest"
  },
  "devDependencies": {
    "@types/glob": "latest",
    "@types/jasmine-node": "latest",
    "@types/loader-utils": "latest",
    "@types/webpack": "latest",
    "@types/yargs": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-leosingleton": "leosingleton/eslint-config-leosingleton",
    "eslint-plugin-github": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "jasmine": "latest",
    "jasmine-xml-reporter": "latest",
    "loader-utils": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "scripts": {
    "build": "npx tsc",
    "clean": "rm -rf ./build",
    "lint": "npx eslint \"**/*.ts\" \"**/*.js\"",
    "test": "./node_modules/jasmine-xml-reporter/bin/jasmine.js ./build/__tests__/*.test.js --junitreport --output=build/"
  },
  "files": [
    "bin/*",
    "build/*.d.ts",
    "build/*.js"
  ],
  "bin": {
    "webpack-glsl-minify": "bin/webpack-glsl-minify",
    "wgm": "bin/wgm"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts"
}
