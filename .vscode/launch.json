{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Unit Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jasmine-xml-reporter/bin/jasmine.js",
        "./build/__tests__/*.test.js",
        "--output=build/"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}